<Window xmlns:Controls="clr-namespace:CloudFoundry.VisualStudio.Controls"  x:Class="CloudFoundry.VisualStudio.Forms.PushDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:converters="clr-namespace:CloudFoundry.VisualStudio.Converters"
        Title="PushDialog" Height="461" Width="522"  WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Loaded="Window_Loaded" >

    <Control.Resources>
        <converters:InverseBooleanConverter x:Key="InverseBoolean"/>
    </Control.Resources>

    <Grid IsEnabled="{Binding Refreshing, Converter={StaticResource InverseBoolean}}">
        <xctk:BusyIndicator >
            <!--IsBusy="{Binding BusyBox.IsBusy}"
                            BusyContent="{Binding BusyBox.BusyMessage}"-->
            <xctk:Wizard FinishButtonClosesWindow="True">
                <xctk:WizardPage x:Name="TargetPage" PageType= "Interior"
                                   Title="Target"
                                   Description="Target">
                    
                    <Controls:TargetUserControl x:Name="ucTarget" />
                </xctk:WizardPage>
                <xctk:WizardPage x:Name="AppPage" PageType= "Interior"
                                   Title="Application Settings"
                                   Description="Application Settings">
                    
                    <Controls:AppSettingsUserControl x:Name="ucAppSeetings" />
                </xctk:WizardPage>

                <xctk:WizardPage x:Name="RoutesPage" PageType= "Interior"
                                   Title="Routes"
                                   Description="Routes">
                    <Controls:RoutesUserControl x:Name="ucRoutes" />
                </xctk:WizardPage>
                
                <xctk:WizardPage x:Name="ServicesPage" PageType= "Interior"
                                   Title="Services"
                                   Description="Services">
                    <Controls:ServicesUserControl x:Name="ucServices" />
                </xctk:WizardPage>
                
                <xctk:WizardPage x:Name="EnvVarsPage" PageType= "Interior"
                                   Title="Environment Variables"
                                   Description="Environment Variables"
                                   CanFinish="True">
                    <Controls:EnvVarsUserControl x:Name="ucEnvVars" />
                </xctk:WizardPage>
            </xctk:Wizard>
        </xctk:BusyIndicator>
    </Grid>
</Window>
